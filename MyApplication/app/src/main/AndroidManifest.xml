<?xml version="1.0" encoding="UTF-8"?>
 <manifest android:versionName="1.0" android:versionCode="1" package="com.dean.mobileauto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<uses-sdk android:minSdkVersion="8"/>

<uses-permission android:name="android.permission.BLUETOOTH"/>

<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

<uses-permission android:name="android.permission.INTERNET"/>

<uses-permission android:name="android.permission.CAMERA"/>

<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


<application android:theme="@style/AppTheme" android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:allowBackup="true">


    <activity android:name=".Main" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:label="@string/app_name" android:configChanges="orientation|keyboardHidden|screenSize">


        <intent-filter>

            <action android:name="android.intent.action.MAIN"/>

            <category android:name="android.intent.category.LAUNCHER"/>

        </intent-filter>

    </activity>


    <activity android:name=".AboutUs" android:theme="@android:style/Theme.Dialog" android:label="@string/app_name">


        <intent-filter>

            <action android:name="com.dean.mobileauto.ABOUT"/>

            <category android:name="android.intent.category.DEFAULT"/>

        </intent-filter>

    </activity>

    <activity android:name=".Voice" android:label="@string/app_name"> </activity>

    <activity android:name=".Prefs" android:label="@string/app_name">


        <intent-filter>

            <action android:name="com.dean.mobileauto.PREFS"/>

            <category android:name="android.intent.category.DEFAULT"/>

        </intent-filter>


    </activity>



 </application>

</manifest>